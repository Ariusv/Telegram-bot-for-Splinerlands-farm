CREATE TABLE IF NOT EXISTS battles (
	battle_queue_id text PRIMARY KEY,
    inactive text,
    ruleset text,
    mana_cap text,
    match_type text,
    created_date text,
    player_rating_initial text,
    player_rating_final  text,
    winner  text,
    summoner_id text,
    summoner_level text,
    monster_1_id text,
    monster_1_level text,
    monster_1_abilities text,
    monster_2_id text,
    monster_2_level text,
    monster_2_abilities text,
    monster_3_id text,
    monster_3_level text,
    monster_3_abilities text,
    monster_4_id text,
    monster_4_level text,
    monster_4_abilities text,
    monster_5_id text,
    monster_5_level text,
    monster_5_abilities text,
    monster_6_id text,
    monster_6_level text,
    monster_6_abilities text
);

CREATE TABLE IF NOT EXISTS users (
	player text PRIMARY KEY,
    rating text,
    battles text,
    wins text,
    longest_streak text,
    max_rating text,
    rank text,
    reward_claim_tx text,
    guild_id text,
    guild_name text,
    guild_data text,
    avatar_id text,
    display_name text
);